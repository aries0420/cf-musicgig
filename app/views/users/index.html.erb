<h1>My Account</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <% if current_user? %>
      <p class="text-primary">
        Name: <%= current_user.first_name %> <%= current_user.last_name %><br>
        Email: <%= current_user.email %>
      </p>
      <% end %>
    </div>
  </div>
</div>

<h3>My Gigs</h3>

<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <% if current_user? %>
      <p>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Gig Title</th>
              <th>Description</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @gigs.each do |gig| %>
              <tr>
                <td><%= link_to gig.title, gig %></td>
                <td><%= truncate(gig.description, length: 50) %></td>
                <td class="btn btn-default"><%= link_to "Edit", edit_gig_path(gig) %></td>
                <td class="btn btn-default"><%= link_to "Delete", gig, method: :delete, confirm: "Are you sure you want to delete this gig?" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </p>
      <% end %>
      <p class="btn btn-default"><%= link_to "View All Gigs", dashboard_path %></p>
    </div>
  </div>
</div> <!-- /container -->
