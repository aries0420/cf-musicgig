<h1>Contact</h1>

<div class="row">
  <div class="col-lg-6">
  <%= simple_form_for @contact, :html => {:class => "form-group"} do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :message, class: "form-control", rows: "10" %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :nickname, :hint => "Leave this field blank!" %>
    </div>
    <%= f.submit "Send Message", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
